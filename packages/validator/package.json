{
    "name": "@alidatorjs/validator",
    "version": "1.0.0",
    "description": "Tiny chainable modular validator in 174 bytes gzipped.",
    "author": "Víctor García",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/gc-victor/alidatorjs/tree/master/packages/validator"
    },
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "alidator",
        "validator",
        "validation",
        "javascript",
        "library"
    ],
    "main": "dist/validator.js",
    "umd:main": "dist/validator.umd.js",
    "module": "dist/validator.m.js",
    "source": "validator.js",
    "typings": "index.d.ts",
    "types": "index.d.ts",
    "directories": {
        "example": "../../examples",
        "test": "./tests"
    },
    "scripts": {
        "test": "../../node_modules/.bin/tap -J --node-arg=-r --node-arg=esm *.test.js",
        "test:progress": "yarn test --reporter=progress",
        "test:watch": "yarn test:progress && ../../node_modules/.bin/chokidar './*.js' -c 'yarn test:progress'"
    }
}
